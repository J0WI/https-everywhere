<!--
	Other ricardo rulesets:
		- Ricardopay.ch.xml
		- Ricardoshops.ch.xml

	Problematic hosts in *.ricardo.ch:
		- fr.ricardo.ch *
		- schnellverkaufen.ricardo.ch °
		- vendrevite.ricardo.ch °

	* Mismatche
	° Expired
-->
<ruleset name="Ricardo.ch">
        <target host="ricardo.ch" />
        <target host="www.ricardo.ch" />
        <target host="assistant.ricardo.ch" />
        <target host="auto.ricardo.ch" />
        <target host="fr.ricardo.ch" />
        <target host="auto.fr.ricardo.ch" />
        <target host="www.fr.ricardo.ch" />
        <target host="help.ricardo.ch" />

	<target host="pics.ricardostatic.ch" />

        <securecookie host=".+" name=".+" />

	<rule from="^http://fr\.ricardo\.ch/"
		to="https://www.fr.ricardo.ch/" />
        <rule from="^http:"
                to="https:" />
</ruleset>
